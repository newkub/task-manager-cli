{
  "name": "task-manager-cli",
  "version": "1.0.0",
  "description": "A command-line task manager for organizing and tracking tasks",
  "type": "module",
  "packageManager": "bun@1.0.0",
  "main": "./dist/index.js",
  "bin": {
    "wtask": "dist/index.js"
  },
  "scripts": {
    "build": "tsdown --exports --dts && bun link",
    "dev": "bun run --watch src/index.ts",
    "lint": "biome check src",
    "postinstall": "bun run src/init.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/bun": "latest",
    "tsdown": "^0.15.6",
    "typescript": "^5.9.3"
  },
  "module": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0"
  },
  "types": "./dist/index.d.ts"
}
